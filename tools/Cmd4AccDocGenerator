function addBody ()
{
   wfs( `<BODY>\n` );

   addFixedHeader_WithinBody();

   addContentDiv_WithinBody( );

   addAccordionScript_WithinEndOfBody();

   addDropDownScript_WithinEndOfBody();

   addToggleVisibilityScript_WithinEndOfBody( );

   wfs( `</BODY>\n` );
}

function addFluidHeader_WithinFixedHeader()
{
