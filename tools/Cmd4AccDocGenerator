      addLogoDiv_WithinFluidHeader( );

   endDiv( "container-fluid" );
}
function addFixedHeader_WithinBody()
{
   wf( "+", `<HEADER class="header fixed-top">\n` );

      addFluidHeader_WithinFixedHeader();

   wf( "-", `</HEADER>\n` );
}


